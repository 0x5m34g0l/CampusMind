<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CampusMind.UI.Pages.AuthTestPage"
    Title="Auth Test">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Email" />
            <Entry x:Name="EmailEntry" Placeholder="email@domain.com" Keyboard="Email" />

            <Label Text="Name (for Register)" />
            <Entry x:Name="NameEntry" Placeholder="Your name" />

            <Label Text="Password" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Register" Clicked="OnRegisterClicked" />
                <Button Text="Login" Clicked="OnLoginClicked" />
            </HorizontalStackLayout>

            <Label Text="Result:" FontAttributes="Bold" />
            <Label x:Name="ResultLabel" Text="-" LineBreakMode="WordWrap" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
